# Normal
# empaquetar: mvnw clean package
FROM openjdk:17-alpine
COPY target/ms.autentication-0.0.1-SNAPSHOT.jar /usr/app.jar
ENV PORT=8080
EXPOSE 8080
ENTRYPOINT ["java","-jar","/usr/app.jar"]

