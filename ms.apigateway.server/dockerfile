# Normal
# empaquetar: mvnw clean package
FROM openjdk:17-alpine
COPY target/ms.apigateway.server-1.0.0.jar /usr/app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","/usr/app.jar"]

